<%- include("../partials/header") %>
    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">Add new comment to <%=camp.name%></h1>
            <div style="width:30%; margin:25px auto;">
                <form action="/campgrounds/<%=camp._id%>/comments" method="post">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" placeholder="Text">
                    </div>
                    <!-- <div class="form-group">
                        <input class="form-control" type="text" name="comment[author]" placeholder="Author">
                    </div> -->
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/campgrounds">Go Back</a>
            </div>

        </div>
    </div>
<%- include("../partials/footer") %>